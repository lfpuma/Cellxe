<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>

    </style>

    <style name="Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OrangeButton" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AuthorizationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorControlNormal">@color/colorWhite30Alpha</item>
        <item name="colorControlActivated">@color/colorWhite30Alpha</item>
    </style>

    <style name="AuthorizationTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="AuthorizationTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="fontPath">fonts/roboto.medium.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontPath">fonts/roboto.medium.ttf</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorActivatedHighlight">@color/colorWhite</item>
    </style>


    <style name="SpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FormTextInputLayoutHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorFormHint</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
